DESCRIPTION="Open-source clone of UW Pico text editor"
HOMEPAGE="http://www.nano-editor.org/"
SRC_URI="http://www.nano-editor.org/dist/v2.0/${P}.tar.gz"

DIFF_EXCLUDES="nano.spec"

CYGCONF_ARGS="
	--enable-browser
	--enable-color
	--enable-extra
	--enable-help
	--enable-multibuffer
	--enable-justify
	--enable-nanorc
	--enable-nls
	--enable-speller
	--enable-tabcomp
	--enable-wrapping
	--disable-debug
	--disable-tiny
	--disable-utf8
	--disable-wrapping-as-root
	--without-slang
"
